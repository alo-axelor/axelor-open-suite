<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="medical-leave-grid" title="Medical leaves"
    model="com.axelor.apps.hr.db.MedicalLeave">
    <field name="statusSelect"/>
    <field name="employee"/>
    <field name="medicalLeaveDate"/>
    <field name="leaveReason"/>
  </grid>

  <form name="medical-leave-form" title="Medical leave"
    model="com.axelor.apps.hr.db.MedicalLeave" onNew="action-medical-leave-attrs-fill-employee">

    <panel name="mainPanel" colSpan="12">
      <field name="statusSelect" widget="NavSelect" colSpan="12" showTitle="false"/>
      <field name="employee" readonly="true" colSpan="4"/>
      <field name="medicalLeaveDate" colSpan="4"/>
      <field name="medicalLeaveFile" colSpan="4" widget="binary-link"/>
      <field name="leaveReason" colSpan="12"/>
      <field name="note" colSpan="12"/>
    </panel>
  </form>

  <action-attrs name="action-medical-leave-attrs-fill-employee">
    <attribute for="employee" name="value" expr="eval: __parent__" if="eval: __parent__"/>
  </action-attrs>
</object-views>
